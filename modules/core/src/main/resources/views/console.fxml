<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="45.0" minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <GridPane GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" percentWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" percentWidth="50.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox fillHeight="false" prefHeight="45.0" spacing="10.0">
                    <children>
                        <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" />
                        <Button fx:id="copyButton" mnemonicParsing="false" text="Copy All" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="30.0" />
                    </padding>
                </HBox>
                <HBox alignment="TOP_RIGHT" fillHeight="false" prefHeight="45.0" spacing="10.0" GridPane.columnIndex="1">
                    <children>
                        <Button fx:id="toTopButton" mnemonicParsing="false" text="To Top" />
                        <Button fx:id="toBottomButton" mnemonicParsing="false" text="To Bottom" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" right="30.0" />
                    </padding>
                </HBox>
            </children>
        </GridPane>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <TextArea fx:id="consoleTextArea" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" wrapText="true" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="Monospaced Regular" size="13.0" />
               </font></TextArea>
            </children>
        </HBox>
    </children>
</GridPane>
