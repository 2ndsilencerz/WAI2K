<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label prefHeight="16.0" prefWidth="196.0" text="API Key:" />
                <Hyperlink fx:id="setupHyperlink" text="How to setup?" />
            </children>
        </HBox>
        <TextField fx:id="apiKeyTextField" prefWidth="300.0" />
        <Separator prefWidth="200.0" />
        <Label text="Notifications:" />
        <CheckBox fx:id="onRestartCheckBox" mnemonicParsing="false" text="On Restart" />
        <CheckBox fx:id="onStopConditionCheckBox" mnemonicParsing="false" text="On Stop Condition" />
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER">
         <children>
            <Label prefHeight="16.0" prefWidth="248.0" text="Test Message:" />
            <Button fx:id="sendButton" mnemonicParsing="false" text="Send" />
         </children>
      </HBox>
      <TextField fx:id="titleTextField" accessibleText="asdfa" prefWidth="300.0" promptText="Title" />
      <TextArea fx:id="messageTextArea" prefHeight="200.0" prefWidth="200.0" promptText="Message Body" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
