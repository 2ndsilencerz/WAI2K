<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label prefWidth="75.0" text="Time:"/>
                <Spinner fx:id="hourSpinner" editable="true" prefWidth="50.0"
                         styleClass="split-arrows-vertical"/>
                <Label text=":"/>
                <Spinner fx:id="minuteSpinner" editable="true" prefWidth="50.0"
                         styleClass="split-arrows-vertical"/>
            </children>
        </HBox>
    </children>
</VBox>
