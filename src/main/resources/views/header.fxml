<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Profile:" />
      <ComboBox fx:id="profileComboBox" editable="true" prefWidth="250.0" />
      <HBox fx:id="buttons" HBox.hgrow="ALWAYS" />
      <SplitMenuButton fx:id="startStopButton" mnemonicParsing="false" styleClass="green-split-menu" stylesheets="@../css/split-menu.css" text="Start">
        <items>
          <MenuItem mnemonicParsing="false" text="Action 1" />
          <MenuItem mnemonicParsing="false" text="Action 2" />
        </items>
      </SplitMenuButton>
   </children>
</HBox>
